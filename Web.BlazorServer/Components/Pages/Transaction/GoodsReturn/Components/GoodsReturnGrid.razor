@using Web.BlazorServer.Components.Security
@using Web.BlazorServer.ViewModels.Administration.User
@using Web.BlazorServer.ViewModels.Transaction.GoodsReturn
@using Web.BlazorServer.ViewModels.Transaction.Receiving

@inherits BaseComponent

<AppDataGrid @ref="@GoodsReturnDataGrid" Id="purchase_order_grid" TItem="GoodsReturnDataGridVM" DataGetter="@LoadDataAsync" GridSettings="@GoodsReturnDataGridSettings" @bind-GridSettingsLoaded="@GridSettingsLoaded" ActionName="@ActionGetGoodsReturns">
    <HeaderTemplate>
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" AlignItems="AlignItems.Center" Gap="8px">
            <RadzenButton Icon="settings" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Click="@OpenTableSettings" />
            <RadzenButton Icon="sync" Size="ButtonSize.Small" Click="GoodsReturnDataGrid.ReloadDataAsync" />
            <RadzenButton Icon="add" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Success" Click="@CreateGoodsReturn" />
        </RadzenStack>
    </HeaderTemplate>
    <GridColumns>
        <RadzenDataGridColumn TItem="GoodsReturnDataGridVM"
                              Property="@nameof(GoodsReturnDataGridVM.DocNum)"
                              Type="@typeof(int)"
                              Title="PO Doc No." />
        <RadzenDataGridColumn TItem="GoodsReturnDataGridVM"
                              Property="@nameof(GoodsReturnDataGridVM.DocDate)"
                              Type="@typeof(DateTime)"
                              Title="PO Date">
            <Template>
                @context.DocDate.ToString("MM/dd/yyyy")
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="GoodsReturnDataGridVM"
                              Property="@nameof(GoodsReturnDataGridVM.CardName)"
                              Type="@typeof(string)"
                              Title="Supplier Name" />
        
        <RadzenDataGridColumn TItem="GoodsReturnDataGridVM"
                              Property="@nameof(GoodsReturnDataGridVM.Remarks)"
                              Type="@typeof(string)"
                              Title="Remarks" />
        <RadzenDataGridColumn TItem="GoodsReturnDataGridVM"
                              Frozen
                              FrozenPosition="FrozenColumnPosition.Right"
                              Width="35px">
            <Template>
                <RadzenButton Icon="arrow_right_alt" Size="ButtonSize.ExtraSmall" Click="() => ViewGoodsReturn(context)" />
            </Template>
        </RadzenDataGridColumn>
    </GridColumns>
</AppDataGrid>

@code {
    async Task OpenTableSettings()
    {
        await DialogService.OpenAsync(
            "Table Settings",
            ds => @<AppGridSettings TItem="GoodsReturnDataGridVM"
                                    @bind-Grid=@GoodsReturnDataGrid.DataGrid
                                    @bind-GridSettings=@GoodsReturnDataGridSettings />,
        options: GridSettingsService.GetDialogOptions());

        await GoodsReturnDataGrid.DataGrid.Reload();
    }
}
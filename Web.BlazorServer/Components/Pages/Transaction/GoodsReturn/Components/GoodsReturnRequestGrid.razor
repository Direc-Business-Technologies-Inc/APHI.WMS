@using Web.BlazorServer.Components.Security
@using Web.BlazorServer.ViewModels.Administration.User
@using Web.BlazorServer.ViewModels.Transaction.GoodsReturn
@using Web.BlazorServer.ViewModels.Transaction.Receiving

@inherits BaseComponent

<AppDataGrid @ref="@GoodsReturnRequestDataGrid" Id="purchase_order_grid" TItem="GRRDataGridVM" DataGetter="@LoadDataAsync" GridSettings="@GoodsReturnRequestDataGridSettings" @bind-GridSettingsLoaded="@GridSettingsLoaded" ActionName="@ActionGetGoodsReturnRequests">
    <HeaderTemplate>
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" AlignItems="AlignItems.Center" Gap="8px">
            <RadzenButton Icon="settings" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Click="@OpenTableSettings" />
            <RadzenButton Icon="sync" Size="ButtonSize.Small" Click="GoodsReturnRequestDataGrid.ReloadDataAsync" />
        </RadzenStack>
    </HeaderTemplate>
    <GridColumns>
        <RadzenDataGridColumn TItem="GRRDataGridVM"
                              Property="@nameof(GRRDataGridVM.DocNum)"
                              Type="@typeof(int)"
                              Title="PO Doc No." />
        <RadzenDataGridColumn TItem="GRRDataGridVM"
                              Property="@nameof(GRRDataGridVM.DocDate)"
                              Type="@typeof(DateTime)"
                              Title="PO Date">
            <Template>
                @context.DocDate.ToString("MM/dd/yyyy")
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="GRRDataGridVM"
                              Property="@nameof(GRRDataGridVM.GRPODocNum)"
                              Type="@typeof(int)"
                              Title="GRPO Doc No." />
        <RadzenDataGridColumn TItem="GRRDataGridVM"
                              Property="@nameof(GRRDataGridVM.CardName)"
                              Type="@typeof(string)"
                              Title="Supplier Name" />
        
        <RadzenDataGridColumn TItem="GRRDataGridVM"
                              Property="@nameof(GRRDataGridVM.Remarks)"
                              Type="@typeof(string)"
                              Title="Remarks" />
        <RadzenDataGridColumn TItem="GRRDataGridVM"
                              Frozen
                              FrozenPosition="FrozenColumnPosition.Right"
                              Width="35px">
            <Template>
                <RadzenButton Icon="arrow_right_alt" Size="ButtonSize.ExtraSmall" Click="() => ViewGoodsReturnRequest(context)" />
            </Template>
        </RadzenDataGridColumn>
    </GridColumns>
</AppDataGrid>

@code {
    async Task OpenTableSettings()
    {
        await DialogService.OpenAsync(
            "Table Settings",
            ds => @<AppGridSettings TItem="GRRDataGridVM"
                                    @bind-Grid=@GoodsReturnRequestDataGrid.DataGrid
                                    @bind-GridSettings=@GoodsReturnRequestDataGridSettings />,
        options: GridSettingsService.GetDialogOptions());

        await GoodsReturnRequestDataGrid.DataGrid.Reload();
    }
}
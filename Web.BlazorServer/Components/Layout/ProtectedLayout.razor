@inherits LayoutComponentBase

<RadzenComponents />

<RadzenLayout>
    <RadzenHeader>
        <Header />
        <NavigationMenu />
    </RadzenHeader>
    <RadzenBody Style="padding: 0">
        <AppBody>
            @if (Authenticating)
            {
                <AppContent>
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="8px">
                        <RadzenProgressBarCircular ProgressBarStyle="ProgressBarStyle.Primary" Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" Size="ProgressBarCircularSize.ExtraSmall" />
                        <RadzenText Text="Authenticating" TextStyle="TextStyle.Body2" class="rz-color-base-600" />
                    </RadzenStack>
                </AppContent>
            }
            else
            {
                @Body
            }
        </AppBody>
    </RadzenBody>
    <RadzenFooter>
        <Footer />
    </RadzenFooter>
</RadzenLayout>

<NavigationLock ConfirmExternalNavigation="@HasUnsavedChangesProvider.HasUnsaveChanges"></NavigationLock>
<AppFullScreenLoading />